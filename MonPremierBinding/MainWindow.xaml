<Window x:Class="MonPremierBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonPremierBinding"
        mc:Ignorable="d"
        Title="Ma Première Source de Données" Height="350" Width="525">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Margin="10,0,0,0">
            <Button Name="btnAddActivity" Padding="5,0" Click="btnAddActivity_Click">Ajouter une activité</Button>
            <Button Name="btnChangeActivity" Padding="5,0" Click="btnChangeActivity_Click">Modifier une activité</Button>
            <Button Name="btnDeleteActivity" Padding="5,0" Click="btnDeleteActivity_Click">Supprimer une activité</Button>
        </StackPanel>
        <ListBox Name="lbActivities" DisplayMemberPath="Name"></ListBox>    
    </DockPanel>
</Window>
