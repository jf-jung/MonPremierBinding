<Window x:Class="MonPremierBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonPremierBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Background>
        <ImageBrush ImageSource="Resources/licorne.png"></ImageBrush>
    </Window.Background>
    <StackPanel>
        <TextBox x:Name="textBox"/>
        <WrapPanel>
            <TextBlock Text="Saisie : "></TextBlock>
            <TextBlock Text="{Binding Path=Text, ElementName=textBox}"></TextBlock>
        </WrapPanel>
    </StackPanel>
</Window>
